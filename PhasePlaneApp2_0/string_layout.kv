Screen:

    TextX:
        id: textx
        hint_text: "d/dx       (default = -1 - x^2 + y)"
        pos_hint : {"center_x": .5, "top": .99}
        size_hint_x: .9
        size_hint_y: 0.07
        mode: "rectangle"
        
    TextY:
        id: texty
        hint_text: "d/dy        (default = 1 + x - y^2)"
        pos_hint : {"center_x": .5, "top": .92}
        size_hint_x: .9
        size_hint_y: 0.07
        mode: "rectangle"

    EquationBTN:
        id: setequations
        text: "Set Equations"
        md_bg_color:  0.14, 0.54, 1, 1
        pos_hint: {"center_x": .5, "top": .83}
        size_hint_x: 1
        size_hint_y: 0.07
   
    FullImage:
        id: im
        source : 'flow.png'
        keep_ratio : False
        allow_stretch: True
        pos_hint : {"center_x": .5, "center_y": .5}
        size_hint_y : 0.5
        size_hint_x : 1       

        
    MDButton:
        id: btn
        text: ""
        md_bg_color: 0, 0, 0, 0
        pos_hint: { "top": 0.69, "right": 0.902}
        size_hint: 0.775, 0.379


        
         
    RestartBTN:
        id: restart
        text: "Restart"
        md_bg_color:  0.14, 0.54, 1, 1
        pos_hint: { "x": 0, "y": 0}
        size_hint_x: 1
        size_hint_y: 0.1

    


        

